/**app.wxss**/
@import "utils/fontawesome.wxss";
@import "wxParse/wxParse.wxss";
page{
  color: #333;
}
.container{
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 按钮 */
.btn{
  width: 300rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  background:#1F4BA8;
}
.blue_gradient{
  background: -moz-linear-gradient(top, #1F4BA8 0%, #638ADD 100%) ;
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#1F4BA8), color-stop(100%,#638ADD))  ;
  background: -webkit-linear-gradient(top, #1F4BA8 0%,#638ADD 100%) ;
  background: -o-linear-gradient(top, #1F4BA8 0%,#638ADD 100%) ;
  background: -ms-linear-gradient(top, #1F4BA8 0%,#638ADD 100%) ;
}
.blue_gradient_abeam{
	background:-webkit-linear-gradient(left,#20448B,#132762);
	background:-o-linear-gradient(right,#20448B,#132762);
	background:-moz-linear-gradient(right,#20448B,#132762);
	background:linear-gradient(to right,#20448B,#132762);
}

/* 搜索 */
.search_box{
  width: 690rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
}
.search{
  width: 690rpx;
  height: 70rpx;
  border-radius: 35rpx;
  display: flex;
  align-items: center;
  justify-content: start;
  padding: 0 18rpx;
  box-sizing: border-box;
  font-size: 26rpx;
  margin: 20rpx 0;
  background-color: #F2F2F2;
}
.search image{
  width: 31rpx;
  height: 31rpx;
  /* margin-right:20rpx; */
  padding: 20rpx;
}
.search input{
  flex: 1;
  color: #333;
}
