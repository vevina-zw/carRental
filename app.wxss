/* 车列表 */
.car_list{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.car_list .car_img{
  width: 287rpx;
  height: 167rpx;
}
.car_list .car_box{
  width: 304rpx;
  overflow: hidden;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 40rpx 0;
}
.car_list .car_box .name{
  color: #333;
  font-size: 24rpx;
  display: flex;
  align-items: center;
}
.car_list .car_box .name text{
  font-size: 32rpx;
  margin-left: 20rpx;
}
.car_list .car_box .name image{
  width: 26rpx;
  height: 28rpx;
  margin-left: 20rpx;
}
.car_list .car_box .size{
  font-size: 24rpx;
  color: #999;
}
.car_list .car_box .price{
  font-size: 24rpx;
  display: flex;
  align-items: flex-end;
}
.car_list .car_box .price .discount{
  color: #E61E1E;
  margin-right: 26rpx;
}
.car_list .car_box .price .discount text{
  font-size: 30rpx;
}
.car_list .car_box .price .cost{
  color:#A9A9A9;
  text-decoration: line-through;
}

/* 标题栏 */
.title_bar{
  width: 690rpx;
  margin: 0 auto;
  color: #333;
  font-size: 30rpx;
  height: 87rpx;
  display: flex;
  align-items: center;
}
.title_bar text{
  width: 7rpx;
  height: 25rpx;
  border-radius: 3.5rpx;
  margin-right: 30rpx;
  background-color: #13227A;
}

/* 时间段选择 */
.datePicker_box{
  display: flex;
  align-items: center;
  padding-left: 35rpx;
}
.datePicker_box .cross_line{
  width: 15rpx;
  height: 2rpx;
  background-color: #1F4BA8;
  margin: 0 18rpx;
}
.datePicker_box .picker{
  width: 280rpx;
  height: 50rpx;
  padding:0 24rpx;
  box-sizing: border-box;
  border-radius: 25rpx;
  border: 1rpx solid #CCC;
  font-size: 22rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.datePicker_box .picker .label{
  color: #999;
}
.datePicker_box .picker image{
  width: 9rpx;
  height: 8rpx;
}





