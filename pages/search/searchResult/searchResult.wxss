}
.search_condition{
  width: 690rpx;
  height: 98rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
}
.search_condition >view{
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #333;
}
.search_condition image{
  width: 9.2rpx;
  height: 8.1rpx;
  margin-left: 9rpx;
}

.search_condition_panel{
  width: 750rpx;
  background: rgba(0,0,0,.5);
  position: relative;
}
.search_condition_panel .content,
.search_condition_panel .rent_content{
  width: 750rpx;
  position: absolute;
  background-color: #fff;
  top:0;
  left:0;
}
.search_condition_panel .content >view{
  width: 690rpx;
  height: 103rpx;
  line-height: 103rpx;
  margin: 0 auto;
  border-top: 1px solid #F2F2F2;
  font-size: 24rpx;
  color: #333;
}
/* .search_condition_panel .content >view:first-child{
  color: #1F4BA8;
  border-top: none;
} */
.search_condition_panel .content >view.cur{
  color: #1F4BA8;
  border-top: none;
}
.search_condition_panel .rent_content >view{
  width: 690rpx;
  height: 103rpx;
  line-height: 103rpx;
  margin: 0 auto;
  font-size: 24rpx;
  /* color: #1F4BA8; */
}
.search_condition_panel .rent_content >view.cur,
.search_condition_panel .rent_content >view text.cur{
  color: #1F4BA8;
}
.search_condition_panel .rent_content .text_box{
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
}
.search_condition_panel .rent_content .text_box text{
  width: 134rpx;
  height: 50rpx;
  line-height: 50rpx;
  display: inline-block;
  border-radius: 10rpx;
  background-color: #F2F2F2;
  font-size: 22rpx;
  color: #333;
  text-align: center;
}

