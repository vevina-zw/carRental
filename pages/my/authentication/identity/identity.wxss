/* pages/my/authentication/identity/identity.wxss */
.container >view{
  width: 690rpx;
  margin: 0 auto;
}
.container .btn{
  margin: 60rpx auto 30rpx auto;
}
.picture_upload .tips{
  font-size: 24rpx;
  color: #666;
  text-align: center;
  line-height: 108rpx;
}
.picture_upload .picture_box{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.picture_upload .picture_box >view{
  width: 321rpx;
  height: 202rpx;
  border: 1rpx dashed #999;
  overflow: hidden;
}
.picture_upload .picture_box >view image{
  max-width: 100%;
  max-height: 100%;
}
.picture_upload .picture_box .imgBox{
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}
.picture_upload .picture_box .imgBox .fa{
  color: #e7534c;
  font-size: 40rpx;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}

.input_box {
  padding: 57rpx 0;
}
.input_box >view{
  height: 148rpx;
  border-bottom: 1rpx solid #DDD;
  display: flex;
  align-items: center;
}
.input_box >view label{
  width: 193rpx;
  font-size: 30rpx;
  flex-shrink: 0;
}
.input_box >view input{
  flex: 1;
  font-size: 30rpx;
}