/* pages/car/carDetail/carDetail.wxss */
.container >view{
  width: 690rpx;
}

.container >view.car_banner{
  width: 750rpx;
  position: relative;
}
swiper{
  width: 100%;
}
.swiper-item-images{
  width: 100%;
  height: 380rpx;
}
.car_banner .count_box{
  width: 82rpx;
  height: 26rpx;
  border-radius: 26rpx;
  background-color: rgba(0,0,0,.7);
  text-align: center;
  position: absolute;
  right: 37rpx;
  bottom: 22rpx;
  font-size: 16rpx;
  color: #fff;
}

.car_basic .price{
  margin: 19rpx 0;
}
.car_basic .price .discount{
  color: #E61E1E;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.car_basic .price .discount text{
  font-size: 40rpx;
}
.car_basic .price .discount text.grey{
  color: #999;
  font-size: 26rpx;
}
.car_basic .price .cost{
  color:#A9A9A9;
  text-decoration: line-through;
}
.car_basic .model{
  font-size: 36rpx;
  margin: 14rpx 0;
}
.car_basic .model image{
  width: 30rpx;
  height: 32rpx;
  margin-left: 21rpx;
}
.car_basic .size{
  font-size: 24rpx;
  color: #999;
  line-height: 42rpx;
  display: flex;
}
.car_basic .size >view{
  display: flex;
  flex-direction: column;
  margin-left: 90rpx;
}

.title_bar{
  font-weight: 600;
}

.config_sign{
  display: flex;
  align-items: center;
  /* justify-content: space-between; */
  flex-wrap: wrap;
}
.config_sign >view{
  width: 130rpx;
  height: 70rpx;
  font-size: 16rpx;
  color: #666;
  margin: 20rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.config_sign image{
  max-width: 36rpx;
  max-height: 36rpx;
}

.config_info{
  overflow: hidden;
  padding-left: 20rpx;
  margin-bottom: 20rpx;
}
.config_info >view{
  min-width: 200rpx;
  height: 80rpx;
  float: left;
  margin: 20rpx 0 20rpx 15rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
}
.config_info .title{
  font-size: 26rpx;
  color: #666;
}
.config_info .value{
  font-size: 30rpx;
  color: #333;
}




